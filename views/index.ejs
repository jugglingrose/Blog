<% include partials/header.ejs %>
<body>
  <% include partials/nav.ejs %>
  <div class="container">
    <h1>Blog Posts</h1>
        <!--Dispaly blogs from most recent at top -->
        <% blog.reverse() %>
        <!--Filter through each post and display partial blog-->
        <% for (var i=0; i < blog.length; i++){ %>
        <div class="col-xs-6" id="blog[i]">
          <h2> <%= blog[i].Title %> </h2>
            <% var C = blog[i].Content %>
            <p> <%= C.slice(0, 100)+"..." %> </p>
            <!--<a href="/fullPost/<%=blog[i]._id%>">Enter</a>-->
            <button type="button" class="readMore" id="<%= blog[i]._id %>">Read More</button>
          </div>
          <% } %>
        </div>
    </body>
</html>
